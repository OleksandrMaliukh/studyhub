{
  "name": "studyhub",
  "version": "1.0.0",
  "description": "A modern flashcard learning platform with study modes and interactive games",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "deploy": "./scripts/deploy.sh",
    "setup-env": "./scripts/setup-env.sh",
    "docker:build": "docker build -t studyhub .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": ["quizlet", "flashcards", "learning", "education", "study"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
